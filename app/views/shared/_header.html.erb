<header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
  <div class="col-md-3 mb-2 mb-md-0 ms-3">
    <%= link_to root_path, class: "d-inline-flex link-body-emphasis text-decoration-none" do %>
      <%= image_tag "logo.avif", width: 40, height: 40 %>
    <% end %>
  </div>

  <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
    <li><%= link_to "ホーム", root_path, class: "nav-link px-2 link-secondary" %></li>
    <% if logged_in? %>
      <li><%= link_to "クイズ開始", "#", class: "nav-link px-2 link-secondary" %></li>
    <% end %>
  </ul>

  <div class="col-md-3 text-end me-3">
    <% if logged_in? %>
        <%= link_to "プロフィール", current_user, class: "btn btn-outline-success btn-sm me-2" %>
        <%= link_to "ログアウト", logout_path, data: { turbo_method: :delete }, class: "btn btn-outline-danger btn-sm" %>
    <% else %>
      <%= link_to "新規登録", signup_path, class: "btn btn-success btn-sm me-2" %>
      <%= link_to "ログイン", login_path, class: "btn btn-info btn-sm" %>
    <% end %>
  </div>
</header>
